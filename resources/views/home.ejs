
    <section class="hero py-12">
      <div class="container mx-auto flex items-center px-12 justify-between">
        <div class="w-1/2">
          <h6 class="text-lg">
            <em>Are you hungry!</em>
          </h6>
          <h1 class="text-3xl md:text-6xl font-bold">
            Get a yummy pizza in 30 min
          </h1>
          <button
            class="btn-primary px-6 py-2 rounded-full font-bold mt-4"
          >
            Order Now
          </button>
        </div>
        <div class="w-1/2">
          <img src="/img/hero-pizza.png" alt="hero-image" />
        </div>
      </div>
    </section>
    <section class="menu container py-8 mx-auto px-12">
      <h1 class="text-xl font-bold mb-8">All Pizzas</h1>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">

        <% pizzas.forEach(function(pizza){ %>
          <div class="w-full md:w-64">
          <img class="h-40 mb-4 mx-auto" src='/img/<%= pizza.image %>' alt="peproni"></img>
          <div class="text-center">
            <h2 class="text-lg mb-4"><%= pizza.name%></h2>
            <span class="size py-1 rounded-full uppercase text-xs px-4">
              <%= pizza.size%>
            </span>
            <div class="flex justify-around items-center mt-6">
              <span class="font-bold text-lg">â‚¹<%= pizza.price%></span>
              <button data-pizza="<%= JSON.stringify(pizza) %>" class='add-to-cart py-1 px-6 rounded-full flex items-center font-bold'>
                <span>+</span>
                <span class="ml-2">Add</span>           
              </button>
            </div> 
          </div>
        </div>
        <% }) %>
        
        
      </div>
    </section>
    
